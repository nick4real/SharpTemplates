{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nick4real",
  "classifications": [ "Web", "Web API", "API", "MVC" ],
  "identity": "Nick4real.Templates.Microservice",
  "name": "ASP.NET Microservice",
  "description": "Template for creating Clean Architecture Web API",
  "shortName": "n4r-microservice",
  "sourceName": "MSTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    // Frameworks
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net10.0",
          "description": ".NET 10.0"
        }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    // Database creation strategies
    "DatabaseStrategy": {
      "type": "parameter",
      "displayName": "Database strategy",
      "description": "Defines how database creation status should be verified.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Ensure",
          "displayName": "Ensure Strategy"
        },
        {
          "choice": "AutoMigration",
          "displayName": "Auto-Migration Strategy"
        },
        {
          "choice": "None",
          "displayName": "None"
        }
      ],
      "defaultValue": "None"
    },
    // Scalar support
    "EnableScalarSupport": {
      "type": "parameter",
      "displayName": "Enable Scalar support",
      "description": "Enable Scalar support for API overview.",
      "datatype": "bool",
      "defaultValue": "true"
    },
    // Https redirection
    "EnableHttpsRedirection": {
      "type": "parameter",
      "displayName": "Enable Https redirection",
      "datatype": "bool",
      "defaultValue": "true"
    },
    // Sample logic
    "IncludeSampleLogic": {
      "type": "parameter",
      "displayName": "Include sample logic",
      "description": "Create simple logic to projects.",
      "datatype": "bool",
      "defaultValue": "false"
    },
    // Generators
    "httpPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 5000,
        "high": 5999
      },
      "replaces": "${httpPort}"
    },
    "httpsPort": {
      "type": "generated",
      "generator": "port",
      "parameters": {
        "low": 7000,
        "high": 7999
      },
      "replaces": "${httpsPort}"
    },
    // Mapped choices
    "EnsuredDatabaseStrategy": {
      "type": "computed",
      "value": "(DatabaseStrategy == \"Ensure\")"
    },
    "AutoMigrationDatabaseStrategy": {
      "type": "computed",
      "value": "(DatabaseStrategy == \"AutoMigration\")"
    }
  },
  "sources": [
    {
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".vs/**",
        ".git/**",
        ".template.config/**",
        "Directory.Build.props"
      ],
      "modifiers": [
        {
          "condition": "(!IncludeSampleLogic)",
          "exclude": [
            "MSTemplate.Domain/Entities/WeatherForecast.cs",
            "MSTemplate.Application/DTOs/WeatherForecastDto.cs",
            "MSTemplate.Application/Interfaces/Repositories/IWeatherForecastRepository.cs",
            "MSTemplate.Application/Interfaces/Services/IWeatherForecastService.cs",
            "MSTemplate.Application/Services/WeatherForecastService.cs",
            "MSTemplate.Infrastructure/Persistence/Repositories/WeatherForecastRepository.cs",
            "MSTemplate.API/Controllers/WeatherForecastController.cs"
          ]
        }
      ]
    }
  ]
}